@model EVDealerSales.Models.DTOs.TestDriveDTOs.CreateTestDriveDto

@{
    ViewBag.Title = "Schedule Test Drive";
    var customer = ViewBag.Customer;
    var vehicles = ViewBag.Vehicles;
    // Định dạng datetime-local: yyyy-MM-ddTHH:mm
    var now = DateTime.Now.ToString("yyyy-MM-ddTHH:mm");
}

<h2>Schedule Test Drive</h2>

<div>
    <p><strong>Customer:</strong> @($"{customer.FirstName} {customer.LastName}") (@customer.Email)</p>
</div>

<form asp-action="Schedule" method="post">
    <input type="hidden" asp-for="CustomerId" />

    <div class="form-group">
    <label for="VehicleId">Select Vehicle</label>
    <select asp-for="VehicleId" class="form-control">
            @foreach (var v in vehicles)
            {
                if (Model.VehicleId == v.Id)
                {
                    <option value="@v.Id" selected>
                        @v.ModelName (@v.ModelYear)
                    </option>
                }
                else
                {
                    <option value="@v.Id">
                        @v.ModelName (@v.ModelYear)
                    </option>
                }
            }
    </select>
</div>

    <div class="form-group">
        <label asp-for="ScheduledAt"></label>
        <input asp-for="ScheduledAt" type="datetime-local" class="form-control" value="@now" />
        <span asp-validation-for="ScheduledAt" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Schedule</button>
</form>