@model EVDealerSales.BO.DTOs.TestDriveDTOs.CreateTestDriveDto

@{
    ViewBag.Title = "Schedule Test Drive";
    var customer = ViewBag.Customer;
    var vehicles = ViewBag.Vehicles;
    var now = DateTime.Now.ToString("yyyy-MM-ddTHH:mm");
}

<link rel="stylesheet" href="~/css/employee.css" />

<div class="employee-container">
    <div class="container-fluid">
         Header 
        <div class="employee-header">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h1>
                        <i class="fas fa-calendar-check"></i>
                        Schedule Test Drive
                    </h1>
                    <p style="color: #666; margin: 0.5rem 0 0 0; font-size: 0.875rem;">
                        Book a test drive appointment for your customer
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
             Left Column: Customer & Vehicle Info 
            <div class="col-lg-5">
                 Customer Info Card 
                <div class="employee-card mb-3">
                    <div class="employee-card-body">
                        <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
                            <div style="width: 48px; height: 48px; border-radius: 50%; background: linear-gradient(135deg, #0070f3 0%, #00d4aa 100%); display: flex; align-items: center; justify-content: center; font-size: 1.25rem; font-weight: 600; color: #fff;">
                                @customer.FirstName.Substring(0, 1)@customer.LastName.Substring(0, 1)
                            </div>
                            <div>
                                <h3 style="color: #fff; margin: 0; font-size: 1.125rem; font-weight: 600;">
                                    @customer.FirstName @customer.LastName
                                </h3>
                                <p style="color: #666; margin: 0; font-size: 0.875rem;">
                                    <i class="fas fa-envelope" style="margin-right: 0.25rem;"></i>
                                    @customer.Email
                                </p>
                            </div>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(customer.PhoneNumber))
                        {
                            <div style="padding: 0.75rem; background: #000; border: 1px solid #333; border-radius: 6px;">
                                <div style="color: #666; font-size: 0.75rem; margin-bottom: 0.25rem;">Phone Number</div>
                                <div style="color: #fff; font-size: 0.875rem;">
                                    <i class="fas fa-phone" style="margin-right: 0.5rem; color: #0070f3;"></i>
                                    @customer.PhoneNumber
                                </div>
                            </div>
                        }
                    </div>
                </div>

                 Selected Vehicle Preview 
                <div class="employee-card" id="vehiclePreview" style="display: none;">
                    <div class="employee-card-body">
                        <h3 style="color: #ccc; margin: 0 0 1rem 0; font-size: 0.875rem; font-weight: 500; text-transform: uppercase; letter-spacing: 0.05em;">
                            Selected Vehicle
                        </h3>
                        <div id="vehiclePreviewContent"></div>
                    </div>
                </div>
            </div>

             Right Column: Schedule Form 
            <div class="col-lg-7">
                <div class="employee-card">
                    <div class="employee-card-body">
                        <form asp-action="Schedule" method="post" id="scheduleForm">
                            <input type="hidden" asp-for="CustomerId" />

                             Vehicle Selection 
                            <div class="form-group-modern">
                                <label for="VehicleId" class="form-label-modern">
                                    <i class="fas fa-car"></i>
                                    Select Vehicle
                                </label>
                                <select asp-for="VehicleId" class="form-control-modern" id="vehicleSelect" required>
                                    <option value="">Choose a vehicle...</option>
                                    @foreach (var v in vehicles)
                                    {
                                        <option value="@v.Id"
                                                data-model="@v.ModelName"
                                                data-year="@v.ModelYear"
                                                data-image="@v.ImageUrl"
                                                data-battery="@v.BatteryCapacity"
                                                data-range="@v.RangeKM"
                                                data-price="@v.BasePrice"
                                                selected="@(Model != null && Model.VehicleId == v.Id)">
                                            @v.ModelName (@v.ModelYear) - $@v.BasePrice.ToString("N0")
                                        </option>


                                    }
                                </select>
                            </div>

                             Schedule Dates 
                            <div class="form-group-modern">
                                <label class="form-label-modern">
                                    <i class="fas fa-clock"></i>
                                    Preferred Date & Time
                                </label>
                                <div id="schedule-dates">
                                    <div class="date-input-wrapper" style="display: flex; gap: 0.5rem; align-items: center; margin-bottom: 0.5rem;">
                                        <input type="datetime-local" name="ScheduledDates" class="form-control-modern" value="@now" required style="flex: 1;" />
                                        <button type="button" class="btn-action" onclick="removeDateField(this)" style="display: none; background: #e00; border-color: #e00; color: #fff;">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                                <button type="button" class="btn-modern-secondary" onclick="addDateField()" style="margin-top: 0.5rem;">
                                    <i class="fas fa-plus"></i>
                                    Add Alternative Date
                                </button>
                                @if (ViewData["ScheduleError"] != null)
                                {
                                    <span class="text-danger" style="font-size: 0.75rem; margin-top: 0.5rem; display: block;">
                                        @ViewData["ScheduleError"]
                                    </span>
                                }
                                <p style="color: #666; font-size: 0.75rem; margin-top: 0.5rem; margin-bottom: 0;">
                                    <i class="fas fa-info-circle"></i>
                                    Add multiple dates to give the customer options
                                </p>
                            </div>

                             Notes 
                            <div class="form-group-modern">
                                <label asp-for="Notes" class="form-label-modern">
                                    <i class="fas fa-sticky-note"></i>
                                    Additional Notes (Optional)
                                </label>
                                <textarea asp-for="Notes" class="form-control-modern" rows="4" placeholder="Any special requirements or notes about the test drive..." style="height: auto; resize: vertical;"></textarea>
                            </div>

                             Submit Button 
                            <div style="display: flex; gap: 0.75rem; justify-content: flex-end; margin-top: 1.5rem; padding-top: 1.5rem; border-top: 1px solid #333;">
                                <a href="javascript:history.back()" class="btn-modern-secondary" style="padding: 0.625rem 1.25rem;">
                                    <i class="fas fa-arrow-left"></i>
                                    Back
                                </a>
                                <button type="submit" class="btn-modern" style="padding: 0.625rem 1.5rem;">
                                    <i class="fas fa-calendar-check"></i>
                                    Schedule Test Drive
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add date field functionality
        function addDateField() {
            var container = document.getElementById("schedule-dates");
            var wrapper = document.createElement("div");
            wrapper.className = "date-input-wrapper";
            wrapper.style.cssText = "display: flex; gap: 0.5rem; align-items: center; margin-bottom: 0.5rem;";
            
            var input = document.createElement("input");
            input.type = "datetime-local";
            input.name = "ScheduledDates";
            input.className = "form-control-modern";
            input.style.flex = "1";
            input.required = true;
            
            var now = new Date();
            var formatted = now.toISOString().slice(0,16);
            input.value = formatted;
            
            var removeBtn = document.createElement("button");
            removeBtn.type = "button";
            removeBtn.className = "btn-action";
            removeBtn.style.cssText = "background: #e00; border-color: #e00; color: #fff;";
            removeBtn.innerHTML = '<i class="fas fa-times"></i>';
            removeBtn.onclick = function() { removeDateField(this); };
            
            wrapper.appendChild(input);
            wrapper.appendChild(removeBtn);
            container.appendChild(wrapper);
            
            updateRemoveButtons();
        }
        
        function removeDateField(btn) {
            var wrapper = btn.closest('.date-input-wrapper');
            wrapper.remove();
            updateRemoveButtons();
        }
        
        function updateRemoveButtons() {
            var wrappers = document.querySelectorAll('.date-input-wrapper');
            wrappers.forEach(function(wrapper, index) {
                var removeBtn = wrapper.querySelector('.btn-action');
                if (wrappers.length > 1) {
                    removeBtn.style.display = 'flex';
                } else {
                    removeBtn.style.display = 'none';
                }
            });
        }
        
        // Vehicle preview functionality
        var vehicleSelect = document.getElementById('vehicleSelect');
        var vehiclePreview = document.getElementById('vehiclePreview');
        var vehiclePreviewContent = document.getElementById('vehiclePreviewContent');
        
        vehicleSelect.addEventListener('change', function() {
            var selectedOption = this.options[this.selectedIndex];
            
            if (this.value) {
                var model = selectedOption.getAttribute('data-model');
                var year = selectedOption.getAttribute('data-year');
                var image = selectedOption.getAttribute('data-image');
                var battery = selectedOption.getAttribute('data-battery');
                var range = selectedOption.getAttribute('data-range');
                var price = selectedOption.getAttribute('data-price');
                
                vehiclePreviewContent.innerHTML = `
                    <div style="margin-bottom: 1rem;">
                        <img src="${image}" alt="${model}" style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px; border: 1px solid #333;" />
                    </div>
                    <h4 style="color: #fff; margin: 0 0 0.5rem 0; font-size: 1.125rem; font-weight: 600;">
                        ${model}
                    </h4>
                    <p style="color: #666; margin: 0 0 1rem 0; font-size: 0.875rem;">
                        ${year} Model Year
                    </p>
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 0.75rem; margin-bottom: 1rem;">
                        <div style="background: #000; border: 1px solid #333; border-radius: 6px; padding: 0.75rem;">
                            <div style="color: #666; font-size: 0.75rem; margin-bottom: 0.25rem;">
                                <i class="fas fa-battery-full" style="color: #0070f3;"></i> Battery
                            </div>
                            <div style="color: #fff; font-size: 0.875rem; font-weight: 500;">
                                ${battery} kWh
                            </div>
                        </div>
                        <div style="background: #000; border: 1px solid #333; border-radius: 6px; padding: 0.75rem;">
                            <div style="color: #666; font-size: 0.75rem; margin-bottom: 0.25rem;">
                                <i class="fas fa-road" style="color: #00d4aa;"></i> Range
                            </div>
                            <div style="color: #fff; font-size: 0.875rem; font-weight: 500;">
                                ${range} km
                            </div>
                        </div>
                    </div>
                    <div style="background: linear-gradient(135deg, #0070f3 0%, #00d4aa 100%); padding: 1rem; border-radius: 6px; text-align: center;">
                        <div style="color: rgba(255,255,255,0.8); font-size: 0.75rem; margin-bottom: 0.25rem;">Starting Price</div>
                        <div style="color: #fff; font-size: 1.5rem; font-weight: 600;">$${parseFloat(price).toLocaleString()}</div>
                    </div>
                `;
                
                vehiclePreview.style.display = 'block';
            } else {
                vehiclePreview.style.display = 'none';
            }
        });
        
        // Trigger preview on page load if vehicle is pre-selected
        if (vehicleSelect.value) {
            vehicleSelect.dispatchEvent(new Event('change'));
        }
        
        // Initialize remove buttons visibility
        updateRemoveButtons();
    </script>
}
