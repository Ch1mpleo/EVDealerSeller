@model IEnumerable<EVDealerSales.BO.DTOs.TestDriveDTOs.TestDriveDto>

@{
    ViewBag.Title = "Test Drive Appointments";
    var customerNames = ViewBag.CustomerNames as Dictionary<Guid, string>;
    var vehicleNames = ViewBag.VehicleNames as Dictionary<Guid, string>;
}

<link rel="stylesheet" href="~/css/employee.css" />
<link rel="stylesheet" href="~/css/testDrive.css" />


<div class="employee-container">
    <div class="container-fluid">
        <div class="employee-header">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h1>
                        <i class="fas fa-calendar-check"></i>
                        Test Drive Appointments
                    </h1>
                    <p style="color: #666; margin: 0.5rem 0 0 0; font-size: 0.875rem;">
                        View and manage all scheduled test drives
                    </p>
                </div>
                <div>
                    <a asp-action="Schedule" class="btn-modern">
                        <i class="fas fa-plus"></i> New Test Drive
                    </a>
                </div>
            </div>
        </div>

        @if (Model != null && Model.Any())
        {
            var groupedByCustomer = Model.GroupBy(td => td.CustomerId).ToList();

            <div class="appointments-grid">
                @foreach (var customerGroup in groupedByCustomer)
                {
                    var customerId = customerGroup.Key;
                    var customerName = customerNames != null && customerNames.ContainsKey(customerId)
                    ? customerNames[customerId]
                    : "Unknown Customer";
                    var appointmentCount = customerGroup.Count();

                    <div class="customer-group-card" data-customer-id="@customerId">
                        <div class="customer-group-header" onclick="toggleCustomerGroup(this)">
                            <div class="customer-info-header">
                                <h3 class="customer-name-header">
                                    <i class="fas fa-user-circle"></i>
                                    @customerName
                                </h3>
                                <div class="appointments-count">
                                    <span class="badge">@appointmentCount</span>
                                    <span>@(appointmentCount == 1 ? "Appointment" : "Appointments")</span>
                                </div>
                            </div>
                            <div class="expand-icon">
                                <i class="fas fa-chevron-down"></i>
                            </div>
                        </div>

                        <div class="appointments-list">
                            @foreach (var td in customerGroup.OrderBy(x => x.ScheduledAt))
                            {
                                var statusClass = td.Status.ToString().ToLower() switch
                                {
                                    "scheduled" => "status-pending",
                                    "completed" => "status-completed",
                                    "cancelled" => "status-cancelled",
                                    _ => "status-pending"
                                };

                                <div class="appointment-item">
                                    <div class="appointment-item-header">
                                        <div>
                                            <h4 class="vehicle-name">
                                                <i class="fas fa-car"></i>
                                                @(vehicleNames != null && vehicleNames.ContainsKey(td.VehicleId)
                                                                                    ? vehicleNames[td.VehicleId]
                                                                                    : "Unknown Vehicle")
                                            </h4>
                                        </div>
                                        <span class="status-badge @statusClass">@td.Status</span>
                                    </div>

                                    <div class="appointment-details">
                                        <div class="detail-row">
                                            <i class="fas fa-calendar"></i>
                                            <span>@td.ScheduledAt.ToString("MMMM dd, yyyy")</span>
                                        </div>
                                        <div class="detail-row">
                                            <i class="fas fa-clock"></i>
                                            <span>@td.ScheduledAt.ToString("hh:mm tt")</span>
                                        </div>
                                    </div>

                                    <div class="appointment-actions">
                                        <a asp-action="Details" asp-route-id="@td.Id" class="action-btn action-btn-primary">
                                            <i class="fas fa-eye"></i> View Details
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@td.Id" class="action-btn action-btn-secondary">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        @if (td.Status.ToString().ToLower() == "completed")
                                        {
                                            <a 
                                                asp-controller="Quote" 
                                                asp-action="Create"
                                                asp-route-customerId="@td.CustomerId"
                                                asp-route-vehicleId="@td.VehicleId"
                                                class="action-btn action-btn-success">
                                                <i class="fas fa-file-invoice-dollar"></i> Create Quote
                                            </a>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="employee-card mt-3">
                <div class="empty-state">
                    <i class="fas fa-calendar-times"></i>
                    <h3>No Appointments Yet</h3>
                    <p>There are no test drive appointments scheduled at the moment.</p>
                    <a asp-action="Schedule" class="btn-modern">
                        <i class="fas fa-plus"></i> Schedule First Test Drive
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<script>
    function toggleCustomerGroup(header) {
        const card = header.closest('.customer-group-card');
        card.classList.toggle('expanded');
    }
</script>
