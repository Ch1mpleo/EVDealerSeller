@model EVDealerSales.Models.DTOs.TestDriveDTOs.TestDriveDto

@{
    ViewBag.Title = "Test Drive Details";
}
@{
    var customerName = ViewBag.CustomerName as string ?? Model.CustomerId.ToString();
    var vehicleName = ViewBag.VehicleName as string ?? Model.VehicleId.ToString();
}

<h2>Test Drive Details</h2>

<d<dl class="row">
    <dt class="col-sm-2">Customer</dt>
    <dd class="col-sm-10">@customerName</dd>

    <dt class="col-sm-2">Vehicle</dt>
    <dd class="col-sm-10">@vehicleName</dd>

    <dt class="col-sm-2">Scheduled At</dt>
    <dd class="col-sm-10">@Model.ScheduledAt</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status</dd>

    <dt class="col-sm-2">Notes</dt>
    <dd class="col-sm-10">@Model.Notes</dd>
</dl>

<form asp-action="UpdateStatus" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="btn-group">
        <a href="@Url.Action("Index", "TestDrive")" class="btn btn-success">Confirm</a>
        <button type="submit" name="status" value="Completed" class="btn btn-primary">Complete</button>
        <button type="submit" name="status" value="Canceled" class="btn btn-danger">Cancel</button>
    </div>
</form>
