@using EVDealerSales.BO.DTOs.PaymentDTOs
@using EVDealerSales.BO.Enums
@model PaymentDto

@{
    ViewData["Title"] = "Create Payment";
}

<h2>Create Payment</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Invoice</label>
        <select asp-for="InvoiceId" class="form-select" asp-items="@(ViewBag.Invoices as List<SelectListItem>)">
            <option value="">-- Select invoice --</option>
        </select>
        <span class="text-danger" asp-validation-for="InvoiceId"></span>
    </div>

    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="PaymentDate" class="form-label"></label>
            <input asp-for="PaymentDate" class="form-control" type="date" />
            <span class="text-danger" asp-validation-for="PaymentDate"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Amount" class="form-label"></label>
            <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0.01" />
            <span class="text-danger" asp-validation-for="Amount"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Status</label>
            <select asp-for="Status" class="form-select" asp-items="@(ViewBag.StatusItems as List<SelectListItem>)"></select>
            <span class="text-danger" asp-validation-for="Status"></span>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}