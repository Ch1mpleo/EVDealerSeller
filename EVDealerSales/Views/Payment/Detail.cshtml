@using EVDealerSales.BO.DTOs.PaymentDTOs
@model PaymentResponseDto

@{
    ViewData["Title"] = "Payment";
    var balance = Model.InvoiceTotalAmount - Model.PaidAmount;
}

<h2>Payment</h2>

<dl class="row">
    <dt class="col-sm-3">Invoice #</dt>
    <dd class="col-sm-9">@Model.InvoiceNumber</dd>

    <dt class="col-sm-3">Customer</dt>
    <dd class="col-sm-9">@Model.CustomerName</dd>

    <dt class="col-sm-3">Payment Date</dt>
    <dd class="col-sm-9">@Model.PaymentDate.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Model.Status</dd>

    <dt class="col-sm-3">Amount</dt>
    <dd class="col-sm-9">@Model.Amount.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</dd>

    <dt class="col-sm-3">Invoice Total</dt>
    <dd class="col-sm-9">@Model.InvoiceTotalAmount.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</dd>

    <dt class="col-sm-3">Paid Total</dt>
    <dd class="col-sm-9">@Model.PaidAmount.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</dd>

    <dt class="col-sm-3">Balance</dt>
    <dd class="col-sm-9">@balance.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</dd>
</dl>

<div class="mb-3">
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Delete this payment?');">Delete</button>
</form>