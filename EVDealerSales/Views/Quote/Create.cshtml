@using EVDealerSales.BO.DTOs.QuoteDTOs
@model QuoteDto

@{
    ViewData["Title"] = "Quote";
    var customers = ViewBag.Customers as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>;
    var vehicles = ViewBag.Vehicles as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>;
    var statusItems = ViewBag.StatusItems as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>;
}

<h2>Quote</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Customer</label>
        <select asp-for="CustomerId" class="form-select" asp-items="customers"></select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Vehicle</label>
        <select asp-for="VehicleId" class="form-select" asp-items="vehicles"></select>
        <span asp-validation-for="VehicleId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Quoted Price</label>
        <input asp-for="QuotedPrice" class="form-control" />
        <span asp-validation-for="QuotedPrice" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Final Price (optional)</label>
        <input asp-for="FinalPrice" class="form-control" />
        <span asp-validation-for="FinalPrice" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Status</label>
        <select asp-for="Status" class="form-select" asp-items="statusItems"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Valid Until</label>
        <input asp-for="ValidUntil" class="form-control" type="date" />
        <span asp-validation-for="ValidUntil" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Remarks</label>
        <textarea asp-for="Remarks" class="form-control"></textarea>
        <span asp-validation-for="Remarks" class="text-danger"></span>
    </div>

    <button class="btn btn-success" type="submit">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}