@using EVDealerSales.BO.DTOs.CustomerDTOs
@model GetCustomerDto
@{
    ViewData["Title"] = "Customer Details";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center bg-success text-white">
                    <h4 class="mb-0">Customer Details</h4>
                    <div>
                        <a asp-action="EditCustomer" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Customers" class="btn btn-light">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong>Success!</strong> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Error!</strong> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-4 text-center mb-4">
                            <div class="mb-3">
                                <img src="https://via.placeholder.com/200" alt="@Model.FirstName @Model.LastName" class="rounded-circle img-thumbnail" />
                            </div>
                            <div class="mb-3">
                                <h4>@Model.FirstName @Model.LastName</h4>
                            </div>
                            <button type="button" class="btn btn-danger btn-sm" 
                                    data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="fas fa-trash"></i> Delete Customer
                            </button>

                            <!-- Delete Modal -->
                            <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Confirm Deletion</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to delete <strong>@Model.FirstName @Model.LastName</strong>?
                                            <p class="text-danger mt-2"><small>This action cannot be undone.</small></p>
                                        </div>
                                        <div class="modal-footer">
                                            <form asp-action="DeleteCustomer" asp-route-id="@Model.Id" method="post">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <tbody>
                                        <tr>
                                            <th class="table-light" style="width: 30%">First Name</th>
                                            <td>@Model.FirstName</td>
                                        </tr>
                                        <tr>
                                            <th class="table-light">Last Name</th>
                                            <td>@Model.LastName</td>
                                        </tr>
                                        <tr>
                                            <th class="table-light">Email</th>
                                            <td>@Model.Email</td>
                                        </tr>
                                        <tr>
                                            <th class="table-light">Phone</th>
                                            <td>@Model.Phone</td>
                                        </tr>
                                        <tr>
                                            <th class="table-light">Address</th>
                                            <td>@Model.Address</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Customer history sections could be added here -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <ul class="nav nav-tabs" id="customerTabs" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="orders-tab" data-bs-toggle="tab" 
                                            data-bs-target="#orders" type="button" role="tab" aria-selected="true">
                                        Orders
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="quotes-tab" data-bs-toggle="tab" 
                                            data-bs-target="#quotes" type="button" role="tab" aria-selected="false">
                                        Quotes
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="test-drives-tab" data-bs-toggle="tab" 
                                            data-bs-target="#testDrives" type="button" role="tab" aria-selected="false">
                                        Test Drives
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="feedback-tab" data-bs-toggle="tab" 
                                            data-bs-target="#feedback" type="button" role="tab" aria-selected="false">
                                        Feedback
                                    </button>
                                </li>
                            </ul>
                            <div class="tab-content p-3 border border-top-0 rounded-bottom" id="customerTabsContent">
                                <div class="tab-pane fade show active" id="orders" role="tabpanel">
                                    <p class="text-muted">Order history will be displayed here.</p>
                                </div>
                                <div class="tab-pane fade" id="quotes" role="tabpanel">
                                    <p class="text-muted">Quote history will be displayed here.</p>
                                </div>
                                <div class="tab-pane fade" id="testDrives" role="tabpanel">
                                    <p class="text-muted">Test drive history will be displayed here.</p>
                                </div>
                                <div class="tab-pane fade" id="feedback" role="tabpanel">
                                    <p class="text-muted">Customer feedback will be displayed here.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Auto-dismiss alerts after 5 seconds
            setTimeout(function () {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
}