@{
    ViewData["Title"] = "Customer Email Verification";
    var vehicleId = Context.Request.Query["vehicleId"].ToString();
}

<link rel="stylesheet" href="~/css/employee.css" />

<div class="employee-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <!-- Header Card -->
                <div class="employee-card mb-4">
                    <div class="employee-card-body text-center">
                        <div class="mb-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#0070f3" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                                <polyline points="22,6 12,13 2,6"></polyline>
                            </svg>
                        </div>
                        <h2 class="text-white mb-2" style="font-size: 1.5rem; font-weight: 600;">Customer Verification</h2>
                    </div>
                </div>

                <!-- Form Card -->
                <div class="employee-card">
                    <div class="employee-card-body">
                        <form id="checkEmailForm" autocomplete="off">
                            @* Store vehicleId in hidden input *@
                            <input type="hidden" id="vehicleId" value="@vehicleId" />

                            <div class="form-group-modern">
                                <label for="customerEmail" class="form-label-modern">Email Address</label>
                                <input type="email"
                                       class="form-control-modern"
                                       id="customerEmail"
                                       placeholder="skibidi@example.com"
                                       required />
                                <span id="emailError" class="text-danger" style="font-size: 0.75rem; margin-top: 0.25rem; display: block;"></span>
                            </div>

                            <button type="submit" class="btn-modern w-100" style="height: 40px; justify-content: center;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="9 18 15 12 9 6"></polyline>
                                </svg>
                                Continue
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Info Card -->
                <div class="employee-card mt-3">
                    <div class="employee-card-body">
                        <div style="display: flex; gap: 0.75rem; align-items: flex-start;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#0070f3" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="flex-shrink: 0; margin-top: 2px;">
                                <circle cx="12" cy="12" r="10"></circle>
                                <line x1="12" y1="16" x2="12" y2="12"></line>
                                <line x1="12" y1="8" x2="12.01" y2="8"></line>
                            </svg>
                            <div>
                                <p class="text-white mb-1" style="font-size: 0.875rem; font-weight: 500;">What happens next?</p>
                                <p class="text-muted mb-0" style="font-size: 0.75rem; line-height: 1.5; color: #999;">
                                    If the customer exists in our system, you'll proceed to schedule a test drive.
                                    Otherwise, you'll be asked to add their information first.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('checkEmailForm').addEventListener('submit', function (e) {
            e.preventDefault();

            var email = document.getElementById('customerEmail').value;
            var vehicleId = document.getElementById('vehicleId').value;
            var emailError = document.getElementById('emailError');
            var submitBtn = e.target.querySelector('button[type="submit"]');

            // Clear previous error
            emailError.innerText = "";

            // Validate email
            if (!email) {
                emailError.innerText = "Email is required";
                return;
            }

            // Disable button and show loading state
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="animation: spin 1s linear infinite;"><line x1="12" y1="2" x2="12" y2="6"></line><line x1="12" y1="18" x2="12" y2="22"></line><line x1="4.93" y1="4.93" x2="7.76" y2="7.76"></line><line x1="16.24" y1="16.24" x2="19.07" y2="19.07"></line><line x1="2" y1="12" x2="6" y2="12"></line><line x1="18" y1="12" x2="22" y2="12"></line><line x1="4.93" y1="19.07" x2="7.76" y2="16.24"></line><line x1="16.24" y1="7.76" x2="19.07" y2="4.93"></line></svg> Checking...';

            // Check if customer exists
            fetch('/Staff/CheckCustomerEmailApi?email=' + encodeURIComponent(email))
                .then(response => response.json())
                .then(data => {
                    if (data.exists) {
                        // Customer exists, redirect to schedule page
                        var scheduleUrl = '/TestDrive/Schedule?email=' + encodeURIComponent(email);
                        if (vehicleId) {
                            scheduleUrl += '&vehicleId=' + encodeURIComponent(vehicleId);
                        }
                        window.location.href = scheduleUrl;
                    } else {
                        // Customer doesn't exist, redirect to add customer page
                        var addCustomerUrl = '/Staff/AddCustomer?email=' + encodeURIComponent(email);
                        if (vehicleId) {
                            addCustomerUrl += '&vehicleId=' + encodeURIComponent(vehicleId);
                        }
                        window.location.href = addCustomerUrl;
                    }
                })
                .catch(error => {
                    // Re-enable button and show error
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg> Continue';
                    emailError.innerText = "An error occurred. Please try again.";
                    console.error('[v0] Error checking email:', error);
                });
        });
    </script>

    <style>
        @@keyframes spin {
            from {
                transform: rotate(0deg);
            }

            to {
                transform: rotate(360deg);
            }
        }
    </style>
}
