@using EVDealerSales.BO.DTOs.InvoiceDTOs
@model IEnumerable<ListInvoiceDto>

@{
    ViewData["Title"] = "Invoices";
}

<h2>Invoices</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Create Invoice</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No invoices found.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Invoice #</th>
                <th>Customer</th>
                <th>Order</th>
                <th>Due Date</th>
                <th>Status</th>
                <th class="text-end">Total</th>
                <th class="text-end">Paid</th>
                <th class="text-end">Balance</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var i in Model)
        {
            var balance = i.TotalAmount - i.PaidAmount;
            <tr>
                <td>@i.InvoiceNumber</td>
                <td>@i.CustomerName</td>
                <td>@i.OrderId</td>
                <td>@(i.DueDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                <td>@i.Status</td>
                <td class="text-end">@i.TotalAmount.ToString("C")</td>
                <td class="text-end">@i.PaidAmount.ToString("C")</td>
                <td class="text-end">@balance.ToString("C")</td>
                <td class="text-end">
                    <a asp-action="Detail" asp-route-id="@i.Id" class="btn btn-sm btn-outline-primary">Detail</a>
                    <form asp-action="Delete" asp-route-id="@i.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this invoice?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}