@using EVDealerSales.BO.DTOs.InvoiceDTOs
@using EVDealerSales.BO.Enums
@model InvoiceDto

@{
    ViewData["Title"] = "Create Invoice";
}

<h2>Create Invoice</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Order</label>
        <select asp-for="OrderId" class="form-select" asp-items="@(ViewBag.Orders as List<SelectListItem>)">
            <option value="">-- Select order --</option>
        </select>
        <span class="text-danger" asp-validation-for="OrderId"></span>
    </div>

    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="DueDate" class="form-label"></label>
            <input asp-for="DueDate" class="form-control" type="date" />
            <span class="text-danger" asp-validation-for="DueDate"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="TaxAmount" class="form-label">Tax Amount ($)</label>
            <input asp-for="TaxAmount" class="form-control" type="number" step="1" />
            <span class="text-danger" asp-validation-for="TaxAmount"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="TotalAmount" class="form-label">Total Amount ($)</label>
            <input asp-for="TotalAmount" class="form-control" type="number" step="1" />
            <span class="text-danger" asp-validation-for="TotalAmount"></span>
        </div>
    </div>

    <div class="row g-3 mt-2">
        <div class="col-md-4">
            <label class="form-label">Status</label>
            <select asp-for="Status" class="form-select" asp-items="@(ViewBag.StatusItems as List<SelectListItem>)"></select>
            <span class="text-danger" asp-validation-for="Status"></span>
        </div>
    </div>

    <div class="mt-3">
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
        <span class="text-danger" asp-validation-for="Notes"></span>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}