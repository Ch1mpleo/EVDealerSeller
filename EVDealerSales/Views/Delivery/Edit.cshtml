@using EVDealerSales.BO.DTOs.DeliveryDTOs
@using EVDealerSales.BO.Enums
@model DeliveryDto

@{
    ViewData["Title"] = "Edit Delivery";
}

<h2>Edit Delivery</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <!-- Order is fixed; pass as hidden and show read-only -->
    <input type="hidden" asp-for="OrderId" />
    <div class="mb-3">
        <label class="form-label">Order</label>
        <select class="form-select" asp-items="@(ViewBag.Orders as List<SelectListItem>)" disabled></select>
    </div>

    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="PlannedDate" class="form-label"></label>
            <input asp-for="PlannedDate" class="form-control" type="date" />
            <span class="text-danger" asp-validation-for="PlannedDate"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="ActualDate" class="form-label"></label>
            <input asp-for="ActualDate" class="form-control" type="date" />
            <span class="text-danger" asp-validation-for="ActualDate"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Status</label>
            <select asp-for="Status" class="form-select" asp-items="@(ViewBag.StatusItems as List<SelectListItem>)"></select>
            <span class="text-danger" asp-validation-for="Status"></span>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}