@using EVDealerSales.Models.Commons
@using EVDealerSales.Models.DTOs.UserDTOs
@model Pagination<GetEmployeeDto>
@{
    ViewData["Title"] = "Employee Management";
}

<link rel="stylesheet" href="~/css/employee.css" />

<div class="employee-container">
    <div class="container-fluid">
        <div class="employee-header">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h1>
                        <i class="fas fa-users"></i>
                        Employees
                    </h1>
                    <p style="color: #666; margin: 0.5rem 0 0 0; font-size: 0.875rem;">
                        Manage your team members and their access
                    </p>
                </div>
                <div class="header-actions">
                    <a asp-action="CreateEmployee" class="btn-modern">
                        <i class="fas fa-plus"></i>
                        Add Employee
                    </a>
                </div>
            </div>
        </div>

        <div class="employee-card">
            <div class="employee-card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert-modern success">
                        <i class="fas fa-check-circle"></i>
                        @TempData["SuccessMessage"]
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert-modern error">
                        <i class="fas fa-exclamation-circle"></i>
                        @TempData["ErrorMessage"]
                    </div>
                }

                <form asp-action="Employees" method="get" class="search-container">
                    <div class="flex-grow-1">
                        <input type="text"
                               class="search-modern"
                               name="searchTerm"
                               value="@ViewBag.SearchTerm"
                               placeholder="Search employees..." />
                    </div>
                    <div class="search-filters">
                        <button type="submit" class="btn-modern">
                            <i class="fas fa-search"></i>
                        </button>
                        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                        {
                            <a asp-action="Employees" class="btn-modern-secondary">
                                <i class="fas fa-times"></i>
                            </a>
                        }
                    </div>
                </form>

                <div class="table-modern">
                    <table>
                        <thead>
                            <tr>
                                <th>Employee</th>
                                <th>Contact</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th style="width: 120px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count == 0)
                            {
                                <tr>
                                    <td colspan="5" style="text-align: center; padding: 3rem; color: #666;">
                                        <div style="margin-bottom: 1rem;">
                                            <i class="fas fa-users" style="font-size: 2rem; color: #333;"></i>
                                        </div>
                                        <div style="font-size: 1rem; margin-bottom: 0.5rem; color: #ccc;">No employees found</div>
                                        <div style="font-size: 0.875rem;">
                                            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                                            {
                                                <span>Try adjusting your search criteria</span>
                                            }
                                            else
                                            {
                                                <span>Get started by adding your first employee</span>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var employee in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center gap-3">
                                                <div class="employee-avatar" style="width: 32px; height: 32px; font-size: 0.875rem;">
                                                    @employee.FullName.Substring(0, 1).ToUpper()
                                                </div>
                                                <div>
                                                    <div style="font-weight: 500; color: #fff; font-size: 0.875rem;">@employee.FullName</div>
                                                    <div style="font-size: 0.75rem; color: #666;">ID: @employee.Id</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div style="font-size: 0.875rem;">
                                                <div style="margin-bottom: 0.25rem; color: #ccc;">@employee.Email</div>
                                                <div style="color: #666;">@employee.Phone</div>
                                            </div>
                                        </td>
                                        <td>
                                            <span style="background: #333; color: #ccc; padding: 0.25rem 0.5rem; border-radius: 4px; font-size: 0.75rem; font-weight: 500;">
                                                @employee.Role
                                            </span>
                                        </td>
                                        <td>
                                            <span class="status-badge @(employee.IsActive ? "active" : "inactive")">
                                                @(employee.IsActive ? "Active" : "Inactive")
                                            </span>
                                        </td>
                                        <td>
                                            <div class="action-buttons">
                                                <a asp-action="EmployeeDetails"
                                                   asp-route-id="@employee.Id"
                                                   class="btn-action view"
                                                   title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="EditEmployee"
                                                   asp-route-id="@employee.Id"
                                                   class="btn-action edit"
                                                   title="Edit Employee">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button"
                                                        class="btn-action toggle @(employee.IsActive ? "" : "activate")"
                                                        onclick="showStatusModal('@employee.Id', '@employee.FullName', @employee.IsActive.ToString().ToLower())"
                                                        title="@(employee.IsActive ? "Deactivate" : "Activate") Employee">
                                                    <i class="fas fa-@(employee.IsActive ? "user-slash" : "user-check")"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model.TotalPages > 1)
                {
                    <div class="pagination-modern">
                        @if (Model.HasPrevious)
                        {
                            <a class="page-link"
                               asp-action="Employees"
                               asp-route-page="@(Model.CurrentPage - 1)"
                               asp-route-pageSize="@Model.PageSize"
                               asp-route-searchTerm="@ViewBag.SearchTerm">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        }

                        @for (var i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                        {
                            <a class="page-link @(i == Model.CurrentPage ? "active" : "")"
                               asp-action="Employees"
                               asp-route-page="@i"
                               asp-route-pageSize="@Model.PageSize"
                               asp-route-searchTerm="@ViewBag.SearchTerm">
                                @i
                            </a>
                        }

                        @if (Model.HasNext)
                        {
                            <a class="page-link"
                               asp-action="Employees"
                               asp-route-page="@(Model.CurrentPage + 1)"
                               asp-route-pageSize="@Model.PageSize"
                               asp-route-searchTerm="@ViewBag.SearchTerm">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="modal-overlay" id="statusModal" style="display: none;">
    <div class="modal-content" style="max-width: 500px;">
        <div class="modal-header">
            <h3 id="modalTitle">Confirm Status Change</h3>
            <button class="modal-close" onclick="hideStatusModal()">×</button>
        </div>
        <div class="modal-body">
            <!-- Added employee context card similar to employee details page -->
            <div id="employeeContext" style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem; padding: 0.75rem; background: #000; border-radius: 6px; border: 1px solid #333;">
                <div class="employee-avatar" id="modalAvatar" style="width: 40px; height: 40px; font-size: 1.25rem;">
                </div>
                <div>
                    <div id="modalEmployeeName" style="font-weight: 500; color: #fff; font-size: 0.875rem;"></div>
                    <div id="modalEmployeeId" style="color: #666; font-size: 0.75rem;"></div>
                </div>
            </div>

            <p id="modalMessage" style="margin-bottom: 1rem; color: #ccc; font-size: 0.875rem;"></p>

            <!-- Added warning and info sections with proper styling -->
            <div id="modalWarning" style="display: none; background: rgba(238, 0, 0, 0.1); border: 1px solid #e00; border-radius: 6px; padding: 0.75rem;">
                <div style="color: #e00; font-weight: 500; margin-bottom: 0.25rem; font-size: 0.875rem;">
                    <i class="fas fa-exclamation-triangle"></i> Warning
                </div>
                <div style="color: #ccc; font-size: 0.75rem;">
                    Deactivating this account will prevent system access.
                </div>
            </div>

            <div id="modalInfo" style="display: none; background: rgba(0, 170, 0, 0.1); border: 1px solid #0a0; border-radius: 6px; padding: 0.75rem;">
                <div style="color: #0a0; font-weight: 500; margin-bottom: 0.25rem; font-size: 0.875rem;">
                    <i class="fas fa-info-circle"></i> Information
                </div>
                <div style="color: #ccc; font-size: 0.75rem;">
                    Activating this account will allow system access.
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn-modern-secondary" onclick="hideStatusModal()">Cancel</button>
            <form id="statusForm" method="post" style="display: inline;">
                <!-- Enhanced confirm button with icon -->
                <button type="submit" id="confirmButton" class="btn-modern-danger">
                    <i class="fas fa-user-slash"></i>
                    Deactivate
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showStatusModal(employeeId, employeeName, isActive) {
            const modal = document.getElementById('statusModal');
            const form = document.getElementById('statusForm');
            const message = document.getElementById('modalMessage');
            const confirmButton = document.getElementById('confirmButton');
            const warning = document.getElementById('modalWarning');
            const info = document.getElementById('modalInfo');

            const avatar = document.getElementById('modalAvatar');
            const employeeNameEl = document.getElementById('modalEmployeeName');
            const employeeIdEl = document.getElementById('modalEmployeeId');

            const action = isActive ? 'deactivate' : 'activate';
            const actionClass = isActive ? 'btn-modern-danger' : 'btn-modern-success';

            form.action = `/Employee/ToggleEmployeeStatus/${employeeId}`;
            message.innerHTML = `Are you sure you want to ${action} <strong style="color: #0070f3;">${employeeName}</strong>?`;

            avatar.textContent = employeeName.substring(0, 1).toUpperCase();
            employeeNameEl.textContent = employeeName;
            employeeIdEl.textContent = `ID: ${employeeId}`;

            confirmButton.className = actionClass;
            confirmButton.innerHTML = `<i class="fas fa-${isActive ? 'user-slash' : 'user-check'}"></i> ${action.charAt(0).toUpperCase() + action.slice(1)}`;

            if (isActive) {
                warning.style.display = 'block';
                info.style.display = 'none';
            } else {
                warning.style.display = 'none';
                info.style.display = 'block';
            }

            modal.style.display = 'flex';
        }

        function hideStatusModal() {
            document.getElementById('statusModal').style.display = 'none';
        }

        document.getElementById('statusModal').addEventListener('click', function(e) {
            if (e.target === this) {
                hideStatusModal();
            }
        });

        setTimeout(function () {
            const alerts = document.querySelectorAll('.alert-modern');
            alerts.forEach(alert => alert.style.display = 'none');
        }, 5000);
    </script>
}
