@using EVDealerSales.Models.Commons
@using EVDealerSales.Models.DTOs.UserDTOs
@model Pagination<GetEmployeeDto>
@{
    ViewData["Title"] = "Employees Management";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
                    <h4 class="mb-0">Employees Management</h4>
                    <a asp-action="CreateEmployee" class="btn btn-light">
                        <i class="fas fa-plus"></i> Add New Employee
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong>Success!</strong> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Error!</strong> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="Employees" method="get" class="mb-4">
                        <div class="input-group">
                            <input type="text" class="form-control" name="searchTerm" value="@ViewBag.SearchTerm" 
                                   placeholder="Search by name, email or phone..." />
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-search"></i> Search
                            </button>
                            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                            {
                                <a asp-action="Employees" class="btn btn-outline-secondary">
                                    <i class="fas fa-times"></i> Clear
                                </a>
                            }
                        </div>
                    </form>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>Full Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Role</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count == 0)
                                {
                                    <tr>
                                        <td colspan="6" class="text-center">No employees found.</td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var employee in Model)
                                    {
                                        <tr>
                                            <td>@employee.FullName</td>
                                            <td>@employee.Email</td>
                                            <td>@employee.Phone</td>
                                            <td>@employee.Role</td>
                                            <td>
                                                @if (employee.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="EmployeeDetails" asp-route-id="@employee.Id" class="btn btn-info btn-sm">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="EditEmployee" asp-route-id="@employee.Id" class="btn btn-warning btn-sm">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-@(employee.IsActive ? "danger" : "success") btn-sm" 
                                                            data-bs-toggle="modal" data-bs-target="#toggleStatusModal-@employee.Id">
                                                        <i class="fas fa-@(employee.IsActive ? "lock" : "unlock")"></i>
                                                    </button>
                                                </div>

                                                <!-- Modal for toggling status -->
                                                <div class="modal fade" id="toggleStatusModal-@employee.Id" tabindex="-1" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Confirm Status Change</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                Are you sure you want to @(employee.IsActive ? "deactivate" : "activate") 
                                                                <strong>@employee.FullName</strong>?
                                                            </div>
                                                            <div class="modal-footer">
                                                                <form asp-action="ToggleEmployeeStatus" asp-route-id="@employee.Id" method="post">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                    <button type="submit" class="btn btn-@(employee.IsActive ? "danger" : "success")">
                                                                        @(employee.IsActive ? "Deactivate" : "Activate")
                                                                    </button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (Model.TotalPages > 1)
                    {
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center mt-4">
                                @if (Model.HasPrevious)
                                {
                                    <li class="page-item">
                                        <a class="page-link" 
                                           asp-action="Employees" 
                                           asp-route-page="@(Model.CurrentPage - 1)" 
                                           asp-route-pageSize="@Model.PageSize" 
                                           asp-route-searchTerm="@ViewBag.SearchTerm">
                                            Previous
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">Previous</span>
                                    </li>
                                }

                                @for (var i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" 
                                           asp-action="Employees" 
                                           asp-route-page="@i" 
                                           asp-route-pageSize="@Model.PageSize" 
                                           asp-route-searchTerm="@ViewBag.SearchTerm">
                                            @i
                                        </a>
                                    </li>
                                }

                                @if (Model.HasNext)
                                {
                                    <li class="page-item">
                                        <a class="page-link" 
                                           asp-action="Employees" 
                                           asp-route-page="@(Model.CurrentPage + 1)" 
                                           asp-route-pageSize="@Model.PageSize" 
                                           asp-route-searchTerm="@ViewBag.SearchTerm">
                                            Next
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">Next</span>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Auto-dismiss alerts after 5 seconds
            setTimeout(function () {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
}